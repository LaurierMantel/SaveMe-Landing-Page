<%= form_for(@interested_person) do |f| %>
  <div class="form-group">  
    <% if @interested_person.errors.any? %>
      <div class="col-md-6 col-md-offset-3">
        <div id="error_explanation">
          <h2>Could not save your information:</h2>
          <ul>
          <% @interested_person.errors.full_messages.each do |message| %>
            <li><%= message %></li>
          <% end %>
          </ul>
        </div>
      </div>
    <% end %>

    <div class="row">
      <div class="col-md-6 col-md-offset-3 fields">
        <%= f.label :name %>
        <%= f.text_field :name, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3 fields">
        <%= f.label :email %>
        <%= f.text_field :email, class: "form-control" %>
      </div>
    </div>
    <div class="row">
      <div class="col-md-6 col-md-offset-3 fields">
        <%= f.label :city %>
        <%= f.text_field :location, class: "form-control" %>
      </div>
    </div>
    <br>
    <div class="actions col-md-6 col-md-offset-3">
      <%= f.submit 'Submit contact information', class: "btn btn-primary" %>
    </div>
  </div>
<% end %>

